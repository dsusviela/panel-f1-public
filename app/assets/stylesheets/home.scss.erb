@font-face {
  font-family: 'MODULAR-4';
  src: url('<%= asset_path('MODULAR-4.otf')%>')
}

#navbar {
  overflow: hidden;
  background-color: #1f1f26;
  display: flex;
  align-items: center;
  height: 100px;
  flex-direction: row;
  justify-content: space-between;
}

#navbar a {
  float: left;
  display: block;
  color: #f2f2f2;
  text-align: center;
  padding: 14px;
  text-decoration: none;
  font-family: 'MODULAR-4';
  font-size: 35px;
}

.f1-logo {
  width: 200px;
}

.navbar--logos {
  display: flex;
  align-items: center;
}

.navbar--links {
}

.prediction-leaderboard {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
}

.site-header {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center
}

.site-header--decorator {
  background-color: #db2e20;
  width: 100%;
  height: 10px;
}

.site-header--title {
  width: 800px;
}

.site-body {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 25px;
}
