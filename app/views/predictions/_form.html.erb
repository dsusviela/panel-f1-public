<%= javascript_pack_tag 'prediction_dropdown' %>

<%= form_with(model: prediction, local: true, class: "prediction-form") do |form| %>
  <% if prediction.errors.any? %>
    <div id="error_explanation">
      <h2>Hubieron <%= pluralize(prediction.errors.count, "error") %> errores:</h2>

      <ul>
        <% prediction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <input type="hidden" id="circuit-dropdown-toggle-value" name="prediction[round_id]" value="<%=@rounds.first.id %>">
  <button id="circuit-dropdown-toggle" type="button" class="prediction-form--circuit-dropdown">
    <%=@rounds.first.grandprix_name %>
  </button>
  <div id="circuit-dropdown-content" class="prediction-form--circuits">
    <% @rounds.each do |round| %>
      <div value="<%=round.id%>" class="prediction-form--dropdown-option"><%=round.grandprix_name%></div>
    <% end %>
  </div>

  <div class="prediction-form--input">
    <%= form.label :first_id, "1.", class: "prediction-form--label" %>
    <%= render(partial: 'predictions_dropdown',
              locals: {
                drivers: @drivers,
                button_id: "first-driver-dropdown-toggle",
                content_id: "first-driver-dropdown-content",
                name: :first_id
              })%>
  </div>

